@model SV20T1020570.DomainModels.ProductAttribute
@{

}
<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin thuộc tính</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post">
            <input type="hidden" class="form-control" value="@Model.AttributeID" name="AttributeID" />
            <input type="hidden" class="form-control" value="@Model.ProductID" name="ProductID" />
            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.AttributeName" name="AttributeName"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.AttributeValue" name="AttributeValue" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" value="@Model.DisplayOrder" name="DisplayOrder" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Product/Edit/@Model.ProductID">
                        <i class="fa fa-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>